extends layout

block content
	.show
		h1=post.title
		p.meta Posted in 
				a(href='/categories/show/#{post.category}') #{post.category} 
				by #{post.author} on #{moment(post.date).format("MM-DD-YYYY")}
		img(src='/images/uploads/#{post.mainimage}')
		.content!=post.body
		br
		hr
		if post.comments
			h3 Comments
			each comment, i in post.comments
				.comment
					p.comment-name #{comment.name}
					p.comment-text #{comment.body}
			br
		h3 Add comment
		if errors
			ul.errors
				each error, i in errors
					li.alert.alert-danger #{error.msg}
		form.comment-form(method='post', action='/posts/addcomment')
			input(name='postid', type='hidden', value='#{post._id}')
			.form-group
				label Name 
				input.form-control(name='name', type='text')
			.form-group
				label Email 
				input.form-control(name='email', type='email')
			.form-group
				label.c-body Body 
				textarea.form-control.c-textarea(name='body', id='body')
			br
			input.btn.btn-default(name='submit', type='submit', value='Add Comment')
